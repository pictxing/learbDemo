<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/myToolbarNavigationButtonStyle</item>
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorBg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Text">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackColor</item>
        <item name="android:textSize">@dimen/bottom_txt_size</item>
    </style>

    <style name="myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/padding_size</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
